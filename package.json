{
  "name": "snaptag",
  "version": "1.0.0",
  "description": "Image tagging and management system for Archier with Dropbox integration",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "install-all": "npm install && cd client && npm install && cd ../extension && npm install",
    "build": "cd client && npm run build && mkdir -p server/data temp",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dropbox": "^10.34.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "node-exiftool": "^2.3.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "image",
    "tagging",
    "dropbox",
    "metadata",
    "archier"
  ],
  "author": "Archier",
  "license": "MIT"
}
