{
  "manifest_version": 3,
  "name": "SnapTag - Image Saver",
  "version": "1.0.0",
  "description": "Save and tag images from the web directly to your SnapTag collection on Dropbox",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "http://localhost:3001/*",
    "https://*.railway.app/*",
    "https://*.render.com/*",
    "https://*.onrender.com/*",
    "https://*.fly.dev/*",
    "https://*.archier.com.au/*",
    "https://*.dropbox.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "SnapTag - Save Images",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "popup.js", "popup.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 