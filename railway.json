{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "volumes": [
      {
        "name": "snaptag-data",
        "mountPath": "/app/server/data"
      },
      {
        "name": "snaptag-temp",
        "mountPath": "/app/temp"
      }
    ]
  }
} 